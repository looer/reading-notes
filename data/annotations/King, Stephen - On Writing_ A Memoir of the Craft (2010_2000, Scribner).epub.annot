    <annotation>
        <dc:identifier>urn:uuid:a3f4237e-5f60-465b-b397-b93ff1ea266a</dc:identifier>
        <dc:date>2024-09-01T08:26:23Z</dc:date>
        <dc:creator>urn:uuid:acbea043-dcae-4a2f-9505-2dfd12705ad5</dc:creator>
        <target>
            <fragment start="text/part0009.html#point(/1/4/678/1:21)" end="text/part0009.html#point(:1)" progress="0.349282">
                <text>put your desk in the corner, and every time you sit down there to write, remind yourself why it isn’t in the middle of the room. Life isn’t a support-system for art. It’s the other way around.
</text>
            </fragment>
        </target>
    </annotation>
    <annotation>
        <dc:identifier>urn:uuid:5168bf15-23df-4e70-8f84-bc3469b4dea7</dc:identifier>
